<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core"

   >
    <Dialog id="filterDialog"
      title="{i18n>filterDialogTitle}"
      class="sapUiContentPadding"
      beforeOpen="onDialogBeforeOpen">
      
      <content>
      	<VBox>
      	
      	<VBox>
      		<Label labelFor="idDateRange"  text="{i18n>labelDocumentDate}"/>
			<DateRangeSelection
							id="idDateRange"
							width="100%"
							placeholder="{i18n>filterDocumentDatePlaceholder}"
							value= "{
								'type': 'sap.ui.model.type.DateInterval',
								'formatOptions': {
									'pattern': 'yyyy/MM/dd'
								},
								'parts': [
									{
										'type': 'sap.ui.model.type.Date',
										'path': '/start'
									},
									{
										'type': 'sap.ui.model.type.Date',
										'path': '/end'
									}
								]
								}"
							class="sapUiSmallMarginBottom"/>
		</VBox>
		<VBox>
			<Label labelFor="idDescription" text="{i18n>labelDescription}"/>
      		<Input id="idDescription"/>
		</VBox>
		<CheckBox id="idAndOr" text="{i18n>andOr}" />

      </VBox>
      </content>
      <beginButton>
      	<Button type="Emphasized" press="onFilter" text="{i18n>saveButton}"/>
      </beginButton>
      <endButton>
      	<Button type="Transparent" press="onPressCancel" text="{i18n>cancelButton}"/>
      </endButton>
    </Dialog>
      
      
</core:FragmentDefinition>