<mvc:View
	controllerName="zjblessons.bindingsApp.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:dnd="sap.ui.core.dnd"
	xmlns:semantic="sap.f.semantic">

	<Page
		id="page"
		title="{i18n>worklistTitle}">

		<content>
			<Table
				id="table"
				width="auto"
				items="{
					path: '/zjblessons_base_Headers'
				}"
				growingThreshold="15"
				mode="SingleSelectMaster"
				noDataText="{worklistView>/tableNoDataText}"
				busyIndicatorDelay="{worklistView>/tableBusyDelay}"
				growing="true"
				growingScrollToLoad="true"
				updateFinished="onUpdateFinished">
				<dragDropConfig>
					<dnd:DragDropInfo
						sourceAggregation="items"
						targetAggregation="items"
						dropPosition="Between"
						drop="onDropSelectedProductsTable"/>
				</dragDropConfig>

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<Button
							icon='sap-icon://refresh'
							type='Transparent'
							press='onPressRefresh'
							tooltip='Refresh'
						/>
						<ToolbarSpacer />
						<SearchField
							id="searchField"
							tooltip="{i18n>worklistSearchTooltip}"
							search="onSearch"
							width="auto">
						</SearchField>
					
						
						<Button
							icon='sap-icon://filter'
							type='Transparent'
							press='onPressFilter'
							tooltip='Filter by DocumentNumber and PlantText'
						/>
						<Button
							icon='sap-icon://sort'
							type='Transparent'
							press='onPressSort'
							tooltip='Sort by DocumentNumber and Description'
						/>
						<Button
							icon='sap-icon://group-2'
							type='Transparent'
							press='onPressGroup'
							tooltip='Group by RegionText'
						/>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column id="nameColumnDocumentNumber">
						<Text text="{i18n>tableNameColumnTitleDocumentNumber}" id="nameColumnTitleDocumentNumber"/>
					</Column>
				</columns>
				<columns>
					<Column id="nameColumnDocumentDate">
						<Text text="{i18n>tableNameColumnTitleDocumentDate}" id="nameColumnTitleDocumentDate"/>
					</Column>
				</columns>
				<columns>
					<Column id="nameColumnPlantText">
						<Text text="{i18n>tableNameColumnTitlePlantText}" id="nameColumnTitlePlantText"/>
					</Column>
				</columns>
				<columns>
					<Column id="nameColumnRegionText">
						<Text text="{i18n>tableNameColumnTitleRegionText}" id="nameColumnTitleRegionText"/>
					</Column>
				</columns>
				<columns>
					<Column id="nameColumnDescription">
						<Text text="{i18n>tableNameColumnTitleDescription}" id="nameColumnTitleDescription"/>
					</Column>
				</columns>
				<columns>
					<Column id="nameColumnCreated">
						<Text text="{i18n>tableNameColumnTitleCreated}" id="nameColumnTitleCreated"/>
					</Column>
				</columns>
				
				
				<items>
					<ColumnListItem
						type="Navigation"
						press="onPress">
						<cells>
			                <Text text="{DocumentNumber}" />
			                <Text text="{DocumentDate}" />
			                <Text text="{PlantText}" />
			                <Text text="{RegionText}" />
			                <Text text="{Description}" />
			                <Text text="{Created}" />
			            </cells>
					</ColumnListItem>
				</items>
				
				
			</Table>
		</content>

	</Page>

</mvc:View>